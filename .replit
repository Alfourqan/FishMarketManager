modules = ["java", "java-17", "java-21", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Java Application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Application Poissonnerie"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Inventaire"

[[workflows.workflow.tasks]]

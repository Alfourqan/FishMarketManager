modules = ["java", "java-17", "java-21"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Java Application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Application Poissonnerie"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Compilation Java"

[[workflows.workflow]]
name = "Java Application"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn clean compile"

[[workflows.workflow]]
name = "Application Poissonnerie"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "java -cp target/classes com.poissonnerie.Main"

[[workflows.workflow]]
name = "Compilation Java"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn clean compile"

[deployment]
run = ["sh", "-c", "mvn clean compile"]
